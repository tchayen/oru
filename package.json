{
  "name": "ao-root",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "pnpm --filter ao test",
    "build": "pnpm --filter ao build",
    "dev": "pnpm --filter ao dev",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "tsgo": "pnpm -r tsgo",
    "check": "pnpm lint && pnpm fmt:check && pnpm test && pnpm tsgo"
  },
  "devDependencies": {
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.29.3",
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "cloudflared",
      "esbuild"
    ]
  }
}
