{
  "name": "oru-root",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "pnpm --filter @tchayen/oru test",
    "build": "pnpm --filter @tchayen/oru build",
    "dev": "pnpm --filter @tchayen/oru dev",
    "lint": "oxlint --deny-warnings --type-aware",
    "lint:fix": "oxlint --fix --type-aware",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "tsgo": "pnpm -r tsgo",
    "check": "pnpm lint && pnpm fmt:check && pnpm test && pnpm tsgo"
  },
  "devDependencies": {
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "oxlint-tsgolint": "^0.15.0"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.29.3",
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "cloudflared",
      "esbuild"
    ]
  }
}
