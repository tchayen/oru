{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && pnpm install --frozen-lockfile && pnpm build",
            "timeout": 120,
            "statusMessage": "Installing dependencies and building CLI..."
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(node *)",
      "Bash(npm *)",
      "Bash(npx *)",

      "Bash(pnpm *)",
      "Bash(ORU_BUILD_SERVER=1 pnpm *)",

      "Bash(gh api *)",
      "Bash(gh issue *)",
      "Bash(gh pr *)",
      "Bash(gh release *)",
      "Bash(gh run *)",

      "Bash(git add *)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(git commit *)",
      "Bash(git config *)",
      "Bash(git diff *)",
      "Bash(git fetch *)",
      "Bash(git grep *)",
      "Bash(git log *)",
      "Bash(git merge *)",
      "Bash(git mv *)",
      "Bash(git pull *)",
      "Bash(git push *)",
      "Bash(git rebase *)",
      "Bash(git remote *)",
      "Bash(git restore *)",
      "Bash(git rev-parse *)",
      "Bash(git rm *)",
      "Bash(git show *)",
      "Bash(git stash *)",
      "Bash(git status *)",
      "Bash(git switch *)",
      "Bash(git tag *)",
      "Bash(git worktree list*)",
      "Bash(git worktree prune*)",
      "Bash(git worktree remove*)",
      "Bash(git worktree add ~/oru-worktrees/*)",
      "Bash(git worktree add /Users/tchayen/oru-worktrees/*)",
      "Bash(git -C *)",
      "Bash(git -c *)",
      "Bash(GIT_EDITOR=true git rebase *)",

      "mcp__chrome-devtools__click",
      "mcp__chrome-devtools__close_page",
      "mcp__chrome-devtools__drag",
      "mcp__chrome-devtools__emulate",
      "mcp__chrome-devtools__evaluate_script",
      "mcp__chrome-devtools__fill",
