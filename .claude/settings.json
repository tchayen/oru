{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && pnpm install --frozen-lockfile && pnpm build",
            "timeout": 120,
            "statusMessage": "Installing dependencies and building CLI..."
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(pnpm install*)",
      "Bash(pnpm add*)",
      "Bash(pnpm check*)",
      "Bash(pnpm run*)",
      "Bash(pnpm test*)",
      "Bash(pnpm lint*)",
      "Bash(pnpm fmt*)",
      "Bash(pnpm build*)",
      "Bash(pnpm tsgo*)",
      "Bash(pnpm --filter*)",
      "Bash(pnpm approve-builds*)",

      "Bash(gh pr*)",
      "Bash(git add*)",
      "Bash(git branch*)",
      "Bash(git checkout*)",
      "Bash(git commit*)",
      "Bash(git diff*)",
      "Bash(git fetch*)",
      "Bash(git log*)",
      "Bash(git merge*)",
      "Bash(git pull*)",
      "Bash(git push*)",
      "Bash(git rebase*)",
      "Bash(git remote*)",
      "Bash(git rev-parse*)",
      "Bash(git show*)",
      "Bash(git stash*)",
      "Bash(git status*)",
      "Bash(git switch*)",
      "Bash(git tag*)"
    ]
  }
}
