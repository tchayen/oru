---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import Hero from "../components/Hero.astro";
import TerminalDemo from "../components/TerminalDemo.astro";
import AgentNative from "../components/AgentNative.astro";
import LocalFirst from "../components/LocalFirst.astro";
import CliMobile from "../components/CliMobile.astro";
import SyncArchitecture from "../components/SyncArchitecture.astro";
import DevExperience from "../components/DevExperience.astro";
import InstallCta from "../components/InstallCta.astro";
import Footer from "../components/Footer.astro";
import { SHOW_APP } from "../flags";
---

<Layout>
  <Nav />
  <main>
    <Hero />
    <AgentNative />
    <TerminalDemo />
    <LocalFirst />
    {SHOW_APP && <CliMobile />}
    {SHOW_APP && <SyncArchitecture />}
    <DevExperience />
    <InstallCta />
  </main>
  <Footer />
</Layout>
