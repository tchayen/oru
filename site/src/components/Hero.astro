---
import Badge from "./ui/Badge.astro";
import InstallBlock from "./ui/InstallBlock.astro";
import Button from "./ui/Button.astro";
---

<section class="hero">
  <div class="hero-glow"></div>
  <div class="container hero-inner">
    <Badge class="reveal hero-badge">agent-friendly task manager</Badge>
    <h1 class="display hero-headline reveal" data-delay="80">
      The task manager for developers and their <span class="hero-shimmer">agents</span>.
    </h1>
    <p class="body-lg hero-sub reveal" data-delay="160">
      Local-first CLI with a native iOS companion. JSON output everywhere. No
      accounts. No cloud. Just a SQLite database on your machine and an oplog
      that syncs.
    </p>
    <div class="hero-cta reveal" data-delay="240">
      <InstallBlock />
      <Button variant="secondary" href="https://github.com/AO_REPO">
        <svg
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="currentColor"
        >
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
        View on GitHub
      </Button>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    padding: 128px 0 96px;
    background: var(--bg-base);
    overflow: hidden;
  }

  .hero-glow {
    position: absolute;
    top: -200px;
    left: 50%;
    transform: translateX(-50%);
    width: 800px;
    height: 600px;
    background: radial-gradient(
      ellipse at center,
      rgba(245, 158, 11, 0.06) 0%,
      rgba(245, 158, 11, 0.02) 40%,
      transparent 70%
    );
    pointer-events: none;
  }

  .hero-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .hero-headline {
    max-width: 800px;
    margin-top: 24px;
    margin-bottom: 24px;
  }

  .hero-sub {
    max-width: 640px;
    color: var(--text-secondary);
    margin-bottom: 48px;
  }

  .hero-cta {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: center;
  }

  /* Amber gradient shimmer on "agents" */
  .hero-shimmer {
    background: linear-gradient(
      90deg,
      var(--accent) 0%,
      var(--accent-hover) 40%,
      #fde68a 60%,
      var(--accent) 100%
    );
    background-size: 200% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: shimmer 3s ease-in-out infinite;
  }

  @keyframes shimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  /* Badge pulse glow */
  :global(.hero-badge) {
    animation: badge-pulse 2s ease-in-out 0.4s 3;
  }

  @keyframes badge-pulse {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(245, 158, 11, 0);
    }
    50% {
      box-shadow: 0 0 16px 2px rgba(245, 158, 11, 0.15);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-shimmer {
      animation: none;
      background-position: 0% 50%;
    }

    :global(.hero-badge) {
      animation: none;
    }
  }

  @media (max-width: 639px) {
    .hero {
      padding: 80px 0 64px;
    }

    .hero-cta {
      flex-direction: column;
      width: 100%;
    }

    .hero-cta :global(.install-block) {
      width: 100%;
      justify-content: space-between;
    }
  }
</style>
