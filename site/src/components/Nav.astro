---
import Button from "./ui/Button.astro";
---

<nav
  class="nav sticky top-0 z-100 bg-[rgba(9,9,11,0.8)] backdrop-blur-[16px] border-b border-border-subtle h-16 flex items-center transition-[background,border-color,box-shadow] duration-300 ease-out-expo"
>
  <div class="container flex items-center justify-between w-full">
    <a
      href="/"
      class="font-mono text-xl font-semibold text-text-primary tracking-[-0.02em] cursor-pointer"
      >oru<span class="text-accent">.</span></a
    >
    <div class="flex items-center gap-8">
      <a
        href="https://github.com/ORU_REPO"
        class="text-sm text-text-tertiary transition-colors duration-200 ease-out-expo cursor-pointer hover:text-text-primary"
        target="_blank"
        rel="noopener noreferrer">GitHub</a
      >
      <Button
        variant="primary"
        href="https://www.npmjs.com/package/oru-cli"
        class="!py-2 !px-4 !text-[13px]">Install</Button
      >
    </div>
  </div>
</nav>

<style>
  .nav:global(.nav-scrolled) {
    background: rgba(9, 9, 11, 0.95);
  }

  .nav:global(.nav-past-hero) {
    border-bottom-color: var(--color-accent-border);
    box-shadow: 0 1px 12px rgba(245, 158, 11, 0.06);
  }

  @media (prefers-reduced-motion: reduce) {
    .nav {
      transition: none;
    }
  }
</style>
