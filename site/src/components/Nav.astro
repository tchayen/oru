---
import Button from "./ui/Button.astro";
---

<nav class="nav">
  <div class="nav-inner container">
    <a href="/" class="logo">ao<span class="logo-dot">.</span></a>
    <div class="nav-links">
      <a
        href="https://github.com/AO_REPO"
        class="nav-link"
        target="_blank"
        rel="noopener noreferrer">GitHub</a
      >
      <Button
        variant="primary"
        href="https://www.npmjs.com/package/ao"
        class="nav-cta">Install</Button
      >
    </div>
  </div>
</nav>

<style>
  .nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(9, 9, 11, 0.8);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border-bottom: 1px solid var(--border-subtle);
    height: 64px;
    display: flex;
    align-items: center;
    transition:
      background 300ms cubic-bezier(0.16, 1, 0.3, 1),
      border-color 300ms cubic-bezier(0.16, 1, 0.3, 1),
      box-shadow 300ms cubic-bezier(0.16, 1, 0.3, 1);
  }

  .nav:global(.nav-scrolled) {
    background: rgba(9, 9, 11, 0.95);
  }

  .nav:global(.nav-past-hero) {
    border-bottom-color: var(--accent-border);
    box-shadow: 0 1px 12px rgba(245, 158, 11, 0.06);
  }

  .nav-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .logo {
    font-family: "JetBrains Mono", monospace;
    font-size: 20px;
    font-weight: 600;
    color: var(--text-primary);
    letter-spacing: -0.02em;
    cursor: pointer;
  }

  .logo-dot {
    color: var(--accent);
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .nav-link {
    font-size: 14px;
    color: var(--text-tertiary);
    transition: color 200ms cubic-bezier(0.16, 1, 0.3, 1);
    cursor: pointer;
  }

  .nav-link:hover {
    color: var(--text-primary);
  }

  .nav-cta {
    padding: 8px 16px;
    font-size: 13px;
  }

  @media (prefers-reduced-motion: reduce) {
    .nav {
      transition: none;
    }
  }
</style>
