---
interface Props {
  class?: string;
  copy?: boolean;
}

const { class: className = "", copy = false } = Astro.props;
---

<div class="mini-code-wrap">
  <div
    class:list={[
      "mini-code-content bg-bg-inset border border-border-subtle rounded-lg pl-4 py-3 font-mono text-[13px] leading-[1.6] text-text-secondary overflow-x-auto",
      className,
    ]}
  >
    <div class="w-max min-w-full pr-4"><slot /></div>
  </div>
  {copy && (
    <button
      class="mini-code-copy copy-btn flex items-center justify-center rounded-md text-text-muted transition-all duration-150 cursor-pointer hover:text-text-secondary hover:bg-white/5"
      data-copy-code
      aria-label="Copy"
      type="button"
    >
      <svg
        width="14"
        height="14"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
        <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
      </svg>
    </button>
  )}
</div>

<style>
  .mini-code-wrap {
    position: relative;
  }

  .mini-code-copy {
    position: absolute;
    top: 6px;
    right: 6px;
    bottom: 6px;
    aspect-ratio: 1;
  }

  .mini-code-copy:global(.copied) {
    color: var(--color-text-primary);
  }

  .mini-code-content :global(.prompt) {
    color: var(--color-text-muted);
    user-select: none;
  }
</style>
