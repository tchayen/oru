---
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<div
  class:list={[
    "bg-bg-inset border border-border-subtle rounded-lg px-4 py-3 font-mono text-[13px] leading-[1.6] text-text-secondary overflow-x-auto",
    className,
  ]}
>
  <slot />
</div>

<style>
  div :global(.prompt) {
    color: var(--color-accent);
    user-select: none;
  }
  div :global(.cmd) {
    color: var(--color-text-primary);
  }
  div :global(.sub) {
    color: var(--color-syn-command);
  }
  div :global(.flag) {
    color: var(--color-syn-flag);
  }
  div :global(.str) {
    color: var(--color-syn-string);
  }
  div :global(.val) {
    color: var(--color-syn-value);
  }
  div :global(.key) {
    color: var(--color-syn-key);
  }
</style>
