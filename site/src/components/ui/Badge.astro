---
interface Props {
  class?: string;
  [key: string]: any;
}

const { class: className = "", ...rest } = Astro.props;
---

<span class:list={["badge", className]} {...rest}>
  <slot />
</span>

<style>
  .badge {
    display: inline-block;
    background: var(--accent-subtle);
    border: 1px solid var(--accent-border);
    color: var(--accent);
    font-family: "JetBrains Mono", monospace;
    font-size: 12px;
    font-weight: 500;
    line-height: 1;
    padding: 6px 12px;
    border-radius: 999px;
  }
</style>
