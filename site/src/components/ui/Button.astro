---
interface Props {
  variant?: "primary" | "secondary";
  href?: string;
  class?: string;
  [key: string]: any;
}

const {
  variant = "primary",
  href,
  class: className = "",
  ...rest
} = Astro.props;
const Tag = href ? "a" : "button";

const base =
  "inline-flex items-center gap-2 px-5 py-2.5 rounded-lg text-sm font-medium leading-none transition-all duration-200 ease-out-expo whitespace-nowrap cursor-pointer";
const variants = {
  primary:
    "bg-text-primary text-bg-base hover:bg-text-secondary active:bg-black",
  secondary:
    "bg-transparent border border-border-default text-text-secondary hover:text-text-primary hover:border-border-hover",
};
---

<Tag
  href={href}
  class:list={[base, variants[variant], className]}
  {...href ? { target: "_blank", rel: "noopener noreferrer" } : {}}
  {...rest}
>
  <slot />
</Tag>
